<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sistema-seguimiento-pu" transaction-type="RESOURCE_LOCAL">
        <!-- Cambiamos a Hibernate como proveedor -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Registra las entidades -->
        <class>com.sistema_seguimiento.model.Usuario</class>
        <class>com.sistema_seguimiento.model.Objetivo</class>
        <class>com.sistema_seguimiento.model.RegistroProgreso</class>
        <class>com.sistema_seguimiento.model.Habito</class>
        <class>com.sistema_seguimiento.model.RegistroHabito</class>
        <class>com.sistema_seguimiento.model.TareaKanban</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- ============================================ -->
            <!-- CONFIGURACIÓN LOCAL (H2) - Para desarrollo  -->
            <!-- Comentado para usar Supabase               -->
            <!-- ============================================ -->
            <!--
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/testdb;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            -->

            <!-- ============================================ -->
            <!-- CONFIGURACIÓN SUPABASE (PostgreSQL) - ACTIVA -->
            <!-- Usando Transaction Pooler (aws pooler)      -->
            <!-- ============================================ -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://aws-1-us-east-2.pooler.supabase.com:6543/postgres?sslmode=require&amp;prepareThreshold=0"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres.pofkyvcgltumwpxvuzpp"/>
            <property name="jakarta.persistence.jdbc.password" value="MkkTXwEozmjmSjk1"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- Configuración adicional para Supabase Pooler -->
            <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="5"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>

            <!-- ============================================ -->
            <!-- CONFIGURACIÓN COMÚN                          -->
            <!-- ============================================ -->
            
            <!-- CRÍTICO: Crear tablas automáticamente -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Mostrar SQL en consola (útil para debugging) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Configuración adicional -->
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Pool de conexiones (recomendado para producción) -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Configuración de caché -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>